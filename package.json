{
  "name": "vscode-dotnetcore-test-adapter",
  "displayName": ".Net Core Test Explorer",
  "description": "Run your .Net Core tests in the Sidebar of Visual Studio Code",
  "icon": "img/icon.png",
  "author": "Branden Vennes <b.n.vennes@gmail.com>",
  "publisher": "b-vennes",
  "version": "0.0.1",
  "license": "MIT",
  "homepage": "https://github.com/b-vennes/vscode-dotnetcore-test-adapter",
  "repository": {
    "type": "git",
    "url": "https://github.com/b-vennes/vscode-dotnetcore-test-adapter.git"
  },
  "bugs": {
    "url": "https://github.com/b-vennes/vscode-dotnetcore-test-adapter/issues"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "test",
    "testing"
  ],
  "main": "out/main.js",
  "scripts": {
    "clean": "rimraf out *.vsix",
    "build": "tsc",
    "watch": "tsc -w",
    "rebuild": "npm run clean && npm run build",
    "package": "vsce package",
    "publish": "vsce publish",
    "test": "mocha -r ts-node/register src/**/test.ts"
  },
  "dependencies": {
    "@types/find": "^0.2.1",
    "@types/glob": "^7.1.1",
    "@types/tmp": "^0.1.0",
    "glob": "^7.1.4",
    "save": "^2.4.0",
    "vscode-test-adapter-api": "^1.7.0",
    "vscode-test-adapter-util": "^0.7.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.7",
    "@types/vscode": "^1.36.0",
    "chai": "^4.2.0",
    "mocha": "^6.2.0",
    "ts-node": "^8.3.0",
    "tslib": "^1.9.3",
    "typescript": "^3.5.3",
    "vsce": "^1.65.0"
  },
  "engines": {
    "vscode": "^1.23.0"
  },
  "extensionDependencies": [
    "hbenl.vscode-test-explorer"
  ],
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": ".Net Core Test Explorer configuration",
      "properties": {
        "dotnetTestExplorer.logpanel": {
          "description": "write diagnotic logs to an output panel",
          "type": "boolean",
          "scope": "resource"
        },
        "dotnetTestExplorer.logfile": {
          "description": "write diagnostic logs to the given file",
          "type": "string",
          "scope": "resource"
        },
        "dotnetTestExplorer.files": {
          "description": "glob pattern to test .dll files",
          "type": "string",
          "scope": "resource"
        }
      }
    }
  }
}
